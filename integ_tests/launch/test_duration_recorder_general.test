<launch>
    <arg name="write_directory" default="$(env HOME)/.ros/rosbag_uploader/" />

    <include file="$(find rosbag_cloud_recorders)/launch/duration_recorder.launch">
        <arg name="write_directory" value="$(arg write_directory)" />
    </include>

    <test test-name="TestDurationRecorder" pkg="rosbag_uploader_ros1_integration_tests" type="test_duration_recorder_general.py" time-limit="300">
        <param name="write_directory" value="$(arg write_directory)" />
    </test>
</launch>
